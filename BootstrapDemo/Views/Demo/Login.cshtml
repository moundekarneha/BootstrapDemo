
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
 
</head>
<body>
    <div class="container">
        <form>
            <h2>Login Here</h2>
            <div class="form-group has-error">
                <label for="txtName" class="control-label col-sm-3">User Name</label>
                <div>
                    <input type="text" name="txtName" class="form-control" />
                    <span class="text-danger">Name Required</span>
                </div>
            </div>
            <div class="form-group has-error">
                <label for="txtPass" class="control-label col-sm-3">Password</label>
                <div>
                    <input type="password" name="txtPass" class="form-control" />
                    <span class="text-danger">Password Required</span>
                </div>
            </div>

            <div class="form-group col-sm-3">
                <button class="btn btn-lg btn-block btn-primary">Login</button>
            </div>

        </form>
    </div>
</body>
</html>
